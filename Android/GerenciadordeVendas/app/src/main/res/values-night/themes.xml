<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GerenciadorDeVendas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_01</item>
        <item name="colorPrimaryVariant">@color/light_blue_01</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/dark_gray_01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorTertiary</item>
        <item name="android:navigationBarColor" >?attr/colorTertiary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GerenciadorDeVendas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GerenciadorDeVendas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GerenciadorDeVendas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChipText_SelectedStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>