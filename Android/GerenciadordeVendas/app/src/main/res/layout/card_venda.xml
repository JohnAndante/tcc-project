<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llCardVenda"
        style="@style/LL_card"
        android:layout_marginTop="4dp"
        android:padding="7dp"
        android:clickable="false">

        <TextView
            android:id="@+id/tvVendaNomeCliente"
            style="@style/Text_inner_default"
            android:clickable="false"
            android:text="Nome do Cliente"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvVendaQtdProdutos"
            style="@style/Text_inner_default"
            android:clickable="false"
            android:text="nÂº de Produtos"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVendaNomeCliente" />

        <TextView
            android:id="@+id/tvVendaValor"
            style="@style/Text_inner_default"
            android:clickable="false"
            android:layout_marginLeft="200dp"
            android:text="R$ 0,00"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/tvVendaNomeCliente"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageButton
            android:id="@+id/imgbtDadosCliente"
            style="@style/ImgButton_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>