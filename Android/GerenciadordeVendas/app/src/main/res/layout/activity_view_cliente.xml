<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_01"
    tools:context=".ViewCliente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_gray_01"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgvwIconCliente"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cardbg_roundcorners_lightgray"
                android:src="@drawable/ic_baseline_person_outline_24_white" />

            <TextView
                android:id="@+id/textNomeCliente"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="Nome"
                android:textColor="@color/light_gray_01"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:background="@drawable/cardbg_roundcorners_lightgray"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNomeCliente"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_gray_01"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center|left"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_edit_24_white"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textTelefoneCliente"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="Telefone"
                android:textColor="@color/light_gray_01"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llAdicionarTelefone"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:background="@drawable/cardbg_roundcorners_lightgray"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTelefoneCliente"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_gray_01"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center|left"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_local_phone_24_white" />

            </LinearLayout>

            <TextView
                android:id="@+id/textEnderecoCliente"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="Endereco"
                android:textColor="@color/light_gray_01"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llAdicionarEndereco"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cardbg_roundcorners_lightgray"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llRuaEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRuaEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llNumEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNumEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llComplEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvComplEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llBairroEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBairroEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llUfEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUfEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llCidadeEndereco"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCidadeEndereco"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/light_gray_01"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_edit_24_white"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llBotoesCliente"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btClienteEditar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:focusable="false"
            android:text="Editar" />

        <Button
            android:id="@+id/btClienteVoltar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Voltar" />
    </LinearLayout>

</RelativeLayout>